<!-- BookList.cshtml -->
@model IEnumerable<BookShopManagementSystem.Models.Book>

@{
    ViewData["Title"] = "Book List";
}

<h1>Book List</h1>

<form id="searchForm" method="get" action="@Url.Action("Index", "Customer")">
    <div class="input-group mb-3">
        <input type="text" class="form-control" name="query" placeholder="Search books...">
        <div class="input-group-append">
            <button id="searchButton" class="btn btn-primary" type="submit">Search</button>
        </div>
    </div>
</form>

<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-md-3">
            <div class="card mb-4">
                <img src="/bookImages/@book.ImagePath" class="card-img-top" alt="@book.Title" style="height: 300px; object-fit: cover;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@book.Title</h5>
                    <p class="card-text">by @book.Author</p>
                    <p class="card-text"><strong>Price:</strong> $@book.Price</p>
                  <div>
                      
                        <a href="@Url.Action("AddToCart", "Cart", new { id = book.BookId })" class="btn btn-primary">Order</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Use session data -->
@if (ViewBag.UserRole == "Customer")
{
    <p>Welcome, customer!</p>
}
