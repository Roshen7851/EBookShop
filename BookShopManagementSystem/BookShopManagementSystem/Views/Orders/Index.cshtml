<!-- Index.cshtml -->
@model List<BookShopManagementSystem.Models.Order>

<h1>My Orders</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Books</th>
                <th>Total Price</th>
                <th>Order Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>
                        <ul>
                            @foreach (var orderDetail in order.OrderDetails)
                            {
                                <li>@orderDetail.Book.Title - Quantity: @orderDetail.Quantity</li>
                            }
                        </ul>
                    </td>
                    <td>@order.TotalPrice</td>
                    <td>@order.OrderDate</td>
                    <td>
                        <span style="color:
                      @if (order.Status == "accepted")
                      {
            <text>green</text>
        }
        else if (order.Status == "pending")
        {
            <text>blue</text>
        }
        else if (order.Status == "declined")
        {
            <text>red</text>
        }
                ">
                            @order.Status
            </span>
                    </td>
                    <td>
                        @if (order.Status == "pending")
                        {
                            <a href="@Url.Action("Cancel", "Orders", new { id = order.OrderId })" class="btn btn-danger">Cancel</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No orders found.</p>
}
