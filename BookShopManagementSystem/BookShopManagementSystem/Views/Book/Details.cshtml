@model BookShopManagementSystem.Models.Book

@{
    ViewData["Title"] = "Book Details";
    string backUrl = Url.Action("Index", "Home");
    if (User.Identity.IsAuthenticated && User.IsInRole("Customer"))
    {
        backUrl = Url.Action("Index", "Customer");
    }
}


<h1>Book Details</h1>

<div class="card mb-4">
    <img src="/bookImages/@Model.ImagePath" class="card-img-top" alt="@Model.Title" style="height: 300px; object-fit: cover;">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text"><strong>Author:</strong> @Model.Author</p>
        <p class="card-text"><strong>Price:</strong> $@Model.Price</p>
        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        <p class="card-text"><strong>Category:</strong> @Model.BookCategory</p>
        <p class="card-text"><strong>ISBN:</strong> @Model.ISBN</p>
        <a href="@backUrl" class="btn btn-primary">Back to List</a>
    </div>
</div>
